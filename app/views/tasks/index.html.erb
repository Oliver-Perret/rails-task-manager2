<h1> hello world</h1>

<% @tasks.each do |task| %>
  <ul class="list-inline">
    <li>
      <% if task.completed == true %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
    </li>
   <li>
      <%= task.title %>
      <%= link_to  "view details", task_path(task.id)  %>
   </li>


  <%= link_to edit_path(task.id) do %>
    <p> Edit your task </p>
  <% end %>

  <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, task_path(task.id), method: :delete,  data: { confirm: "Are you sure?" } %>
  </ul>

<% end %>

<%= link_to new_path do %>
  <i class="fa fa-plus"></i> Add a new task
<% end %>
